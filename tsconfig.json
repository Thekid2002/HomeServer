  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "rootDir": "./Backend",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./Backend/**/*.ts"],
}